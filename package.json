{
    "name": "zenplayer",
    "version": "1.0.0",
    "description": "Experience uninterrupted video tracking and resuming with Zenplayer, powered by Electron, Vite, and React.",
    "main": "./out/main/index.js",
    "author": "Asif Shahriar <asif.qubit@gmail.com>",
    "homepage": "https://github.com/asifo1/zenplayer",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "npm run typecheck:node && npm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "npm run typecheck && electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:win": "npm run build && electron-builder --win --config",
        "build:mac": "electron-vite build && electron-builder --mac --config",
        "build:linux": "electron-vite build && electron-builder --linux --config"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^2.0.0",
        "@electron-toolkit/utils": "^2.0.0",
        "better-sqlite3": "^9.1.1",
        "bootstrap": "^5.3.2",
        "clsx": "^2.0.0",
        "electron-updater": "^6.1.1",
        "lodash": "^4.17.21",
        "plyr-react": "^5.3.0",
        "react-contexify": "^6.0.0",
        "react-query": "^3.39.3",
        "react-router-dom": "^6.18.0",
        "reactstrap": "^9.2.1"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config-prettier": "^1.0.1",
        "@electron-toolkit/eslint-config-ts": "^1.0.0",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@electron/packager": "^18.1.3",
        "@types/better-sqlite3": "^7.6.7",
        "@types/lodash": "^4.14.202",
        "@types/node": "^18.17.5",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@vitejs/plugin-react": "^4.0.4",
        "electron": "^25.6.0",
        "electron-builder": "^24.6.3",
        "electron-installer-dmg": "^4.0.0",
        "electron-vite": "^1.0.27",
        "eslint": "^8.47.0",
        "eslint-plugin-react": "^7.33.2",
        "prettier": "^3.0.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sass": "^1.69.5",
        "typescript": "^5.1.6",
        "vite": "^4.4.9"
    },
    "build": {
        "icon": "./build/256x256.png",
        "mac": {
            "icon": "./build/icon.icns",
            "target": "dmg"
        },
        "linux": {
            "icon": "./build/",
            "target": "deb"
        }
    }
}
